<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesource.org/schema/mule/core/2.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:vm="http://www.mulesource.org/schema/mule/vm/2.2"
    xsi:schemaLocation="
          http://www.mulesource.org/schema/mule/core/2.2 http://www.mulesource.org/schema/mule/core/2.2/mule.xsd
          http://www.mulesource.org/schema/mule/vm/2.2 http://www.mulesource.org/schema/mule/vm/2.2/mule-vm.xsd">

    <model name="salesforceHybridInvocationsTestModel">

        <service name="sfLoginQueryService">
            <inbound>
                <inbound-endpoint address="vm://test.login.query"
                    synchronous="true" />
            </inbound>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint
                        address="salesforce://login(g1, g2);*query(g3, r1);"
                        synchronous="true" />
                </pass-through-router>
            </outbound>
        </service>

        <service name="sfLoginQueryLogoutService">
            <inbound>
                <inbound-endpoint address="vm://test.login.query.logout"
                    synchronous="true" />
            </inbound>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint
                        address="salesforce://login(g1, g2);*query(g3, r1);
    					*logout(r1);"
                        synchronous="true" />
                </pass-through-router>
            </outbound>
        </service>

        <service name="sfLoginCreateQueryDeleteService">
            <inbound>
                <inbound-endpoint address="vm://test.login.create.query.delete"
                    synchronous="true" />
            </inbound>
            <outbound>
                <pass-through-router>
                    <outbound-endpoint
                        address="salesforce://login(g1, g2);*create(g3,r1);*query(g4, r1);
    				*delete(r3,r1);"
                        synchronous="true" />
                </pass-through-router>
            </outbound>
        </service>

    </model>

</mule>
